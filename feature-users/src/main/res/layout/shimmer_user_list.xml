<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <View
            android:layout_width="@dimen/user_summary_profile_picture_size"
            android:layout_height="@dimen/user_summary_profile_picture_size"
            android:background="@drawable/shape_shimmer_round"/>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_8"
        app:layout_constraintTop_toTopOf="@id/shimmer1"
        app:layout_constraintBottom_toBottomOf="@id/shimmer1"
        app:layout_constraintStart_toEndOf="@id/shimmer1">
        <View
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:background="@drawable/shape_shimmer"/>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_8"
        app:layout_constraintTop_toBottomOf="@id/shimmer1"
        app:layout_constraintStart_toStartOf="parent">
        <View
            android:layout_width="@dimen/user_summary_profile_picture_size"
            android:layout_height="@dimen/user_summary_profile_picture_size"
            android:background="@drawable/shape_shimmer_round"/>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_8"
        app:layout_constraintTop_toTopOf="@id/shimmer3"
        app:layout_constraintBottom_toBottomOf="@id/shimmer3"
        app:layout_constraintStart_toEndOf="@id/shimmer3">
        <View
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:background="@drawable/shape_shimmer"/>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_8"
        app:layout_constraintTop_toBottomOf="@id/shimmer3"
        app:layout_constraintStart_toStartOf="parent">
        <View
            android:layout_width="@dimen/user_summary_profile_picture_size"
            android:layout_height="@dimen/user_summary_profile_picture_size"
            android:background="@drawable/shape_shimmer_round"/>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_8"
        app:layout_constraintTop_toTopOf="@id/shimmer5"
        app:layout_constraintBottom_toBottomOf="@id/shimmer5"
        app:layout_constraintStart_toEndOf="@id/shimmer5">
        <View
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:background="@drawable/shape_shimmer"/>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_8"
        app:layout_constraintTop_toBottomOf="@id/shimmer5"
        app:layout_constraintStart_toStartOf="parent">
        <View
            android:layout_width="@dimen/user_summary_profile_picture_size"
            android:layout_height="@dimen/user_summary_profile_picture_size"
            android:background="@drawable/shape_shimmer_round"/>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_8"
        app:layout_constraintTop_toTopOf="@id/shimmer7"
        app:layout_constraintBottom_toBottomOf="@id/shimmer7"
        app:layout_constraintStart_toEndOf="@id/shimmer7">
        <View
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:background="@drawable/shape_shimmer"/>
    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>